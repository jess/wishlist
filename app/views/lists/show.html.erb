<p id="notice"><%= notice %></p>
<h1><%= @list.user.name %></h1>
<h2>
  <%= @list.name %>
</h2>

<p>
  <b>Description:</b>
  <%= @list.description %>
</p>
<table class="items">
  <h2>Wish List</h2>
  <% @list.items.each do |item| %>
    <tr class="item">
      <td><%= item.name %></td>
      <td><%= link_to item.url, item.url, :target => "_blank" %></td>
      <td><%= link_to "Edit", edit_list_item_path(item.list_id,item) %> | <%= link_to "Del", list_item_path(item.list, item), :method => :delete, :confirm => "Are you sure you want to delete this item?"  %></td>
    </tr>
  <% end %>
</table>
<h3>Add An Item To Your List</h3>
<div class="add_item">
  <%= render "items/form" %>
</div>

<%= link_to 'Edit List', edit_list_path(@list) %> |
<%= link_to 'Show All Lists', lists_path %>
